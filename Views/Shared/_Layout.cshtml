<script>
 $(document).ready(function () {
        $('#search-input').on('keyup', function () {
            var query = $(this).val();

            if (query.length > 1) {
                $.ajax({
                    url: '@Url.Action("GetProductSuggestions", "Products")',
                    type: 'GET',
                    data: { query: query },
                    success: function (data) {
                        var suggestionsBox = $('#suggestions-box');
                        suggestionsBox.empty(); //xóa gợi ý đang có sau khi load trang

                        if (data.length > 0) {
                            suggestionsBox.show();
                            $.each(data, function (i, item) {
                                var suggestionItem = `
                                    <div class="suggestion-item">
                                        <img src="${item.ImageUrl}" style="width: 50px; height: 50px;" alt="${item.Title}">
                                        <a href="/chi-tiet/${item.Alias}-p${item.Id}">${item.Title}</a>
                                        <span>${item.SalePrice.toLocaleString()} đ</span>
                                    </div>
                                `;
                                suggestionsBox.append(suggestionItem);
                            });
                        } else {
                            suggestionsBox.hide();
                        }
                    }
                });
            } else {
                $('#suggestions-box').hide();
            }
        });
 });
</script>
