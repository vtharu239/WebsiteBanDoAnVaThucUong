    <style>
        .header {
            display: flex;
            flex-direction: column;
            background-color: #fff;
        }

        .main_nav_container {
            width: 100%;
            display: flex;
            justify-content: center; /* Center the content */
            align-items: center;
            padding: 10px 20px;
            /*background-color: #007BFF;*/ /* Change to blue */
            color: #fff;
            position: fixed; /* Fix the navigation bar */
