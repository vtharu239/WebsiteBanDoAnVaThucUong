
@model IEnumerable<WebsiteBanDoAnVaThucUong.Models.EF.Product>

<div class="related-products-section">
    <h3>Sản phẩm liên quan</h3>
    <div class="related-products">
        @foreach (var product in Model)
        {
            <div class="related-product-item">
                <a href="/san-pham/@product.Alias-@product.Id">
                    <img src="@product.Image" width="200" alt="@product.Title" />
                    <h4>@product.Title</h4>
                    <p>Giá: @WebsiteBanDoAnVaThucUong.Common.Common.FormatNumber(product.SalePrice, 0)</p>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .related-products-section {
        margin-top: 40px;
    }

    .related-products {
        display: flex;
        gap: 20px;
    }

    .related-product-item {
        flex: 1;
        text-align: left;
    }

        .related-product-item img {
            max-width: 100%;
            height: auto;
        }
</style>


