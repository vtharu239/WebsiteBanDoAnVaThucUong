@model WebsiteBanDoAnVaThucUong.Models.EF.Voucher

@{
    ViewBag.Title = "Thêm mới Vouchers";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/vouchers" class="nav-link">Danh sách Vouchers</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Thêm mới</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card" style="margin: 10px auto; width: 80%">
        <div class="card-header">
            <h2 class="card-title" style="margin-left:300px; font-size: 30px">THÔNG TIN THÊM MỚI VOUCHERS</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Create", "Vouchers", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <div class="card">
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên Voucher</label>
                                            @Html.TextBoxFor(x => x.VoucherName, new { @class = "form-control", @placeholder = "Tên Voucher" })
                                            @Html.ValidationMessageFor(x => x.VoucherName, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Thông tin Voucher</label>
                                            @Html.TextBoxFor(x => x.VoucherDes, new { @class = "form-control", @placeholder = "Thông tin Voucher" })
                                            @Html.ValidationMessageFor(x => x.VoucherDes, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Mã Coupon</label>
                                            @Html.TextBoxFor(x => x.Coupon, new { @class = "form-control", @placeholder = "Mã Coupon" })
                                            @Html.ValidationMessageFor(x => x.Coupon, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Khuyến mãi</label>
                                            @Html.TextBoxFor(x => x.Discount, new { @class = "form-control", @placeholder = "Discount" })
                                            @Html.ValidationMessageFor(x => x.Discount, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Ngày bắt đầu</label>
                                            @Html.TextBoxFor(x => x.StartDate, new { @class = "form-control", @placeholder = "Ngày bắt đầu" })
                                            @Html.ValidationMessageFor(x => x.StartDate, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Ngày kết thúc</label>
                                            @Html.TextBoxFor(x => x.EndDate, new { @class = "form-control", @placeholder = "Ngày kết thúc" })
                                            @Html.ValidationMessageFor(x => x.EndDate, null, new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-success">Thêm mới</button>
                                </div>
                            </div>
                        </div> <!-- /.card -->
                    }
                    <div>
                        @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-primary" })
                    </div>

                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->