﻿@model PagedList.IPagedList<WebsiteBanDoAnVaThucUong.Models.EF.FeedBackLetter>
@using Microsoft.AspNet.Identity
@Html.AntiForgeryToken()
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách thư phản hồi";
}
@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/feedbackletter" class="nav-link">Quản lý thư phản hồi</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách thư phản hồi</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tên Khách hàng</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Ngày gửi</th>
                        <th>Tiêu đề</th>
                        <th>Nội dung</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ((ViewBag.Page - 1) * ViewBag.PageSize) + 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.User.FullName</td>
                                <td>@item.User.PhoneNumber</td>
                                <td>@item.User.Email</td>
                                <td>@item.CreateDate</td>
                                <td>@item.Title</td>

                                <td>
                                    <a href="/admin/feedbackletter/view/@item.Id" class="btn btn-sm btn-primary">Xem chi tiết</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
