@model IEnumerable<WebsiteBanDoAnVaThucUong.Models.EF.Topping>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách Topping</h2>
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary">Thêm Topping mới</a>

    </p>
        <table class="table table-striped table-bordered">
            <thead style="background-color: #30a6b7;color:white;">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NameTopping)</th>
                    <th>@Html.DisplayNameFor(model => model.PriceTopping)</th>
                    <th class="text-center">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameTopping) </td>
                    <td>@Html.DisplayFor(modelItem => item.PriceTopping) </td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-sm btn-warning">Sửa</a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-sm btn-success">Chi tiết</a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
</div>