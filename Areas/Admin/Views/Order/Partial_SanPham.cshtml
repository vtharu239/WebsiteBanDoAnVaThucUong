﻿@model IEnumerable<WebsiteBanDoAnVaThucUong.Models.EF.OrderDetail>
@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Products.Title</td>
                    <td>@WebsiteBanDoAnVaThucUong.Common.Common.FormatNumber((item.UnitPrice), 0)</td>
                    <td>@item.Quantity</td>
                    <td>@WebsiteBanDoAnVaThucUong.Common.Common.FormatNumber((item.UnitPrice * item.Quantity), 0)</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}