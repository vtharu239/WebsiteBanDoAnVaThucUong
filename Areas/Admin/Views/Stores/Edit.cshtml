@model WebsiteBanDoAnVaThucUong.Models.EF.Store

@{
    ViewBag.Title = "Chỉnh sửa Chi nhánh";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/stores" class="nav-link">Danh sách Chi nhánh</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chỉnh sửa</a>
        </li>
    </ul>
}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title" style=" font-size: 30px">THÔNG TIN CHỈNH SỬA CHI NHÁNH</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "Stores", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.Id)
                        <div class="card">
                            <div class="card-body">
                                <div class="tab-content">
                                    <div class="active tab-pane" id="activity">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Tên chi nhánh</label>
                                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Tên chi nhánh" })
                                            @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Địa chỉ</label>
                                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @placeholder = "Địa chỉ" })
                                            @Html.ValidationMessageFor(x => x.Address, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Long</label>
                                            @Html.TextBoxFor(x => x.Long, new { @class = "form-control", @placeholder = "Long" })
                                            @Html.ValidationMessageFor(x => x.Long, null, new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Lat</label>
                                            @Html.TextBoxFor(x => x.Lat, new { @class = "form-control", @placeholder = "Lat" })
                                            @Html.ValidationMessageFor(x => x.Lat, null, new { @class = "text-danger" })
                                        </div>
             
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label for="exampleInputFile">Hình hiện tại</label>

                                                <img src="~/Image/@Model.Image" style="width:200px;height:120px" />

                                                @*<div class="input-group" style="margin-top:20px">*@
                                                @*<div class="custom-file">
            @Html.TextBoxFor(x => x.Image, new { @id = "txtImage", @class = "form-control" })
        </div>*@

                                                <label for="exampleInputFile">Chọn hình mới</label>
                                              
                                                    <input type="file" name="Image" />
                                                    @*@Html.ValidationMessageFor(model => model.Image,
                                                    "", new { @class = "text-danger" })*@
                                               
                                            </div>
                                            @*</div>*@
                                        </div>
                                    </div>
                                </div>

                                <!-- /.tab-content -->
                            </div><!-- /.card-body -->
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10" style="text-align:center">
                                    <button type="submit" class="btn btn-success">Lưu Lại</button>
                                </div>
                            </div>
                        </div> <!-- /.card -->
                    }
                    <div>
                        @Html.ActionLink("Trở về", "Index", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>