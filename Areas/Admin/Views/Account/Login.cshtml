﻿@model WebsiteBanDoAnVaThucUong.Models.LoginViewModel
@{
    ViewBag.Title = "Admin Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutEmpty.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Asset/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>

<style>
    body {
        font-family: 'Roboto Slab', serif;
    }

    .img--fixed {
        height: 100%;
        width: 100%;
        background-color: rgba(255, 173, 51,0.5);
    }

    input[type=text], input[type=password] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        border: 1px solid #ccc;
        border-radius: 15px;
    }

    .imgcontainer {
        text-align: center;
        margin: 24px 0 12px 0;
    }

    .card {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        background-image: linear-gradient(to bottom,#3d68b8, #2b989c);
        border-radius: 10px;
        width: 500px;
        max-width: 80%;
    }

    .card-body {
        color: #aceca0;
    }
</style>


<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true);
        <div class="img--fixed"></div>
        <div class="card shadow-lg">
            <div class="card-body row">
                <h5 class="text-center">Đăng nhập Quản trị viên</h5>
                <div class="imgcontainer">
                    <img src="~/Uploads/images/logo.png" style="height:100px" class="img-fluid rounded rounded-3">
                </div>
                <div class="container">
                    <label for="uname"><b>Username</b></label>
                    @Html.TextBoxFor(model => model.UserName, new { placeholder = "Tên tài khoản" })

                    <label for="psw"><b>Password</b></label>
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Mật khẩu" })
                    <p> @ViewBag.error</p>
                    <div class="ms-auto me-5" style="width:50%">
                        <button type="submit" class="btn btn-primary">Đăng nhập</button>
                    </div>
                </div>
            </div>
            @*@Html.ValidationMessage("CustomError", new { @class = "text-center text-danger" })*@
        </div>
    }
</body>